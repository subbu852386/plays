---
- name: s3 bucket 
  hosts: localhost
  connection: local
  tasks:
  - name: create s3 bucket
    amazon.aws.s3_bucket:
      name: trialram001
      state: present
      region: us-east-2
  - name: create a folder
    amazon.aws.aws_s3:
      bucket: trialram001
      object: myfolder
      mode: create
  - name: create a file in the folder
    amazon.aws.aws_s3:
      bucket: trialram001
      object: myfolder/info.txt
      src: /home/ram/s3_bucket/info.txt
      mode: put
      permission: public-read
